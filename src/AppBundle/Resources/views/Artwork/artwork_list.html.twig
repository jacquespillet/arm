{% include('AppBundle::navbar.html.twig') %}

<a href="{{ path('new artwork') }}"><button type="button" class="btn btn-success">New Artwork</button></a>
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>artist ID </th>            
            <th>title</th>
            <th>description</th>
            <th>image</th>
            <th>date</th>
            <th>Actions</th>            
        </tr>
    </thead>
    <tbody>
        {% for artwork in artworks %}
            <tr>
                <td><a href="{{ path('artwork detail', {'id': artwork.id}) }}">{{ artwork.id }} </a></td>
                <td><a href="{{ path('artwork detail', {'id': artwork.id}) }}">{{ artwork.artist.name }} </a></td>
                <td><a href="{{ path('artwork detail', {'id': artwork.id}) }}">{{ artwork.title }} </a></td>
                <td><a href="{{ path('artwork detail', {'id': artwork.id}) }}">{{ artwork.image }} </a></td>
                <td><a href="{{ path('artwork detail', {'id': artwork.id}) }}">{{ artwork.date }} </a></td>
                <th>
                     <a href="{{ path('edit_artwork', {'id': artwork.id}) }}" class="glyphicon glyphicon-edit"></a>
                     <a href="{{ path('delete_artwork', {'id': artwork.id}) }}" class="glyphicon glyphicon-remove"></a>
                </th>
            </tr>
        {% endfor %}
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready( function () {
        $('#table_id').DataTable();
    } );
</script>