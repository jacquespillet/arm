<body>
	{% include('AppBundle::navbar.html.twig') %}
	<div class="container">
		{{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
			<div class="form-group">
			    {{ form_label(form.name, null,  { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
			    {{ form_errors(form.name) }}
			    <div class="col-sm-10">
				    {{ form_widget(form.name, { 'attr': {'placeholder': 'Artist Name', 'class':'form-control'}} ) }}
				</div>
			</div>

			<div class="form-group">
			    {{ form_label(form.forename, null,  { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
			    {{ form_errors(form.forename) }}
			    <div class="col-sm-10">
				    {{ form_widget(form.forename, { 'attr': {'placeholder': 'Artist Forename', 'class':'form-control'}} ) }}
				</div>
			</div>

			<div class="form-group">
			    {{ form_label(form.dates, null,  { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
			    {{ form_errors(form.dates) }}
			    <div class="col-sm-10">
				    {{ form_widget(form.dates, { 'attr': {'placeholder': 'Artist Dates', 'class':'form-control'}} ) }}
				</div>
			</div>


			<div class="form-group">
			    {{ form_label(form.biography, null,  { 'label_attr': {'class': 'control-label col-sm-2'}}) }}
			    {{ form_errors(form.biography) }}
			    <div class="col-sm-10">
				    {{ form_widget(form.biography, { 'attr': {'placeholder': 'Artist Description', 'class':'form-control'}} ) }}
				</div>
			</div>



		    <input type="submit" value="Create"
		           class="btn btn-default pull-right" />
		{{ form_end(form) }}
	</div>
</body>