{% include('AppBundle::navbar.html.twig') %}

<body>
	<div class="container">
		<h1> {{artist.name}} {{artist.forename}} </h1>
		<h3> {{artist.dates}} </h3>
		<div> {{artist.biography}} </div>
		<h1> Artworks : </h1>


		<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 400px">
	    <!-- Indicators -->
	    <ol class="carousel-indicators">
      	    {% for artwork in works %}
	      	    {% if loop.index==1 %} 
			      <li data-target="#myCarousel" data-slide-to="{{loop.index +1 }}" class="active"></li>
	      	    {%else%}
			      <li data-target="#myCarousel" data-slide-to="{{loop.index +1 }}" ></li>
      	    	{% endif %}
			{% endfor %}
	    </ol>

	    <!-- Wrapper for slides -->
	    <div class="carousel-inner">

      	    {% for artwork in works %}
	      	    {% if loop.index==1 %} 
			      <div class="item active">
			        <img src="{{ asset('uploads/artwork/' ~ artwork.image) }}" alt="{{ artwork.title }}" style="width:100%;">
			        <div class="carousel-caption">
			          <h3>{{ artwork.title }}</h3>
			          <p>{{ artwork.date }}</p>
			        </div>
			      </div>
	      	    {%else%}
			      <div class="item ">
			        <img src="{{ asset('uploads/artwork/' ~ artwork.image) }}" alt="{{ artwork.title }}" style="width:100%;">
			        <div class="carousel-caption">
			          <h3>{{ artwork.title }}</h3>
			          <p>{{ artwork.date }}</p>
			        </div>
			      </div>
      	    	{% endif %}

			{% endfor %}
	  
	    </div>

	    <!-- Left and right controls -->
	    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
	      <span class="glyphicon glyphicon-chevron-left"></span>
	      <span class="sr-only">Previous</span>
	    </a>
	    <a class="right carousel-control" href="#myCarousel" data-slide="next">
	      <span class="glyphicon glyphicon-chevron-right"></span>
	      <span class="sr-only">Next</span>
	    </a>
	  </div>
	</div>
</body>