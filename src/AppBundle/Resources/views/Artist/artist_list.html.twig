{% include('AppBundle::navbar.html.twig') %}
<a href="{{ path('new artist') }}"><button type="button" class="btn btn-success">New artist</button></a>
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>            
            <th>Forename</th>
            <th>Dates</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for artist in artists %}
            <tr>
                <td><a href="{{ path('artist detail', {'id': artist.id}) }}">{{ artist.id }} </a></td>
                <td><a href="{{ path('artist detail', {'id': artist.id}) }}">{{ artist.name }} </a></td>
                <td><a href="{{ path('artist detail', {'id': artist.id}) }}">{{ artist.forename }} </a></td>
                <td><a href="{{ path('artist detail', {'id': artist.id}) }}">{{ artist.dates }} </a></td>
                <th>
                     <a href="{{ path('edit_artist', {'id': artist.id}) }}" class="glyphicon glyphicon-edit"></a>
                     <a href="{{ path('delete_artist', {'id': artist.id}) }}" class="glyphicon glyphicon-remove"></a>
                </th>
            </tr>
        {% endfor %}
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready( function () {
        $('#table_id').DataTable();
    } );
</script>